<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.limeri.leon.SelecPacienteActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listPacientes"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selec_paciente"
        android:id="@+id/textView"
        android:layout_weight="3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pacientes_list"
        android:id="@+id/textView2"
        android:layout_below="@+id/buttonAddPaciente"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/linearLayout"
        android:weightSum="4"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/buttonAddPaciente"
        android:layout_toEndOf="@+id/buttonAddPaciente"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_search"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="3"
            android:hint="@string/ingrese_busqueda"
            android:layout_marginRight="5dp"
            android:textSize="16dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/btn_search"
            android:layout_above="@+id/listPacientes"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:adjustViewBounds="true"
            android:layout_marginLeft="2dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="2dp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Todos"
        android:id="@+id/btn_mostrarTodos"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:id="@+id/buttonAddPaciente"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:layout_alignBottom="@+id/linearLayout" />

</RelativeLayout>
