<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/usuario"
        android:id="@+id/txtUsuarioConfig"
        android:hint="Usuario"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/provider"
        android:id="@+id/txtProvider"
        android:layout_gravity="right"
        android:paddingLeft="20dp"
        android:singleLine="false"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/txtUsuarioConfig"
        android:layout_toLeftOf="@+id/ibBorrar"
        android:layout_toStartOf="@+id/ibBorrar"
        android:layout_marginRight="10dp"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ibBorrar"
        android:layout_alignTop="@+id/txtProvider"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/btn_dialog"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

</RelativeLayout>