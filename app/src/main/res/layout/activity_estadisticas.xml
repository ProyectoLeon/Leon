<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.limeri.leon.EstadisticasActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione el índice sobre el cuál desea conocer su progreso"
                android:id="@+id/Text"
                android:textSize="30dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Rgroup"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.20">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indice Comprensión Verbal"
                    android:id="@+id/CompVerbal"
                    android:checked="true"
                    android:textSize="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="left" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indice Razonamiento Perceptivo"
                    android:id="@+id/RazPerc"
                    android:layout_gravity="left|center_horizontal"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="5dp"/>


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indice Memoria de Trabajo"
                    android:id="@+id/MemTrab"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="30dp"
                    android:checked="false"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indice Velocidad de Procesamiento"
                    android:id="@+id/VelProc"
                    android:layout_gravity="left|center_horizontal"
                    android:textSize="30dp"
                    android:layout_marginTop="5dp"
                    android:checked="false"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coeficiente Intelectual"
                    android:id="@+id/CoefInt"
                    android:checked="false"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="30dp" />
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generar Estadísticas"
                android:id="@+id/buttonEst"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
