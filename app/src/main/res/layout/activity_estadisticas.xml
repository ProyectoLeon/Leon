<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.limeri.leon.EstadisticasActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione el índice sobre el cuál desea conocer su progreso"
            android:id="@+id/Text"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="162dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indice Comprensión erbal"
                android:id="@+id/CompVerbal"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="20dp"
                android:layout_marginTop="5dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indice Razonamiento Perceptivo"
                android:id="@+id/RazPerc"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="20dp"
                android:layout_marginTop="5dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indice Memoria de Trabajo"
                android:id="@+id/MemTrab"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indice Velocidad de Procesamiento"
                android:id="@+id/VelProc"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:checked="true" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generar Estadísticas"
            android:id="@+id/buttonEst"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</RelativeLayout>
