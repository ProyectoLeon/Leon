<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.limeri.leon.MainActivity">

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Comenzar Test WISC IV"
    android:id="@+id/buttonTest"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="86dp"
    android:textSize="20dp" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Juegos Libres"
    android:id="@+id/buttonJuegos"
    android:textSize="20dp"
    android:layout_below="@+id/buttonEstadisticas"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/paciente"
        android:id="@+id/txtPaciente"
        android:textIsSelectable="false"
        android:textSize="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar estadÃ­sticas"
        android:id="@+id/buttonEstadisticas"
        android:layout_below="@+id/buttonTest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonTest"
        android:layout_alignEnd="@+id/buttonTest"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar datos paciente"
        android:id="@+id/buttonEditarPaciente"
        android:layout_below="@+id/buttonJuegos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonJuegos"
        android:layout_alignEnd="@+id/buttonJuegos"
        android:textSize="20dp" />
</RelativeLayout>
